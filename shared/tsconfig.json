// This tsconfig is only for vscode linting

{
  "compilerOptions": {
    "lib": ["DOM", "ES2015", "ES2020.Promise"],
    "strict": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "Shared/*": ["../shared/*"],
      "ChromeExt/*": ["../chrome-ext/lib/*"],
      "Angular/*": ["../client/src/*"],
      "Express/*": ["../server/src/*"],
    }
  }
}
